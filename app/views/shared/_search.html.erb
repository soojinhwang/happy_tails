<%= form_tag pets_path, method: :get do %>
    <div class="search-component mb-4">
      <div class= "input-width">
        <%= text_field_tag :query,
          params[:query],
          class: "form-control",
          placeholder: "Find a pet",
          value: params[:query],
          data: {
              search_decks_target: 'input',
              action: 'keyup->search-decks#update' }
        %>
        <h4> Adoption status </h4>
          <div class="filters">
          <%= select_tag :adoption_status, options_for_select(["Available", "Reserved", "Adopted"]),
                                    include_blank: true,
                                    value: params[:adoption_status],
                                    data: {
                                      search_decks_target: 'filter',
                                      action: 'change->search-decks#filter' }%>
          </div>
           <h4> Species </h4>
            <div class="filters">
            <%= select_tag :species, options_for_select(["Cat", "Dog"]),
                                    include_blank: true,
                                    value: params[:species],
                                    data: {
                                      search_decks_target: 'filter',
                                      action: 'change->search-decks#filter' }%>
           </div>
          <h4> Garden required </h4>
          <div class="filters">
            <%= select_tag :outdoor_space, options_for_select([ "yes", "no"]),
                                    include_blank: true,
                                    value: params[:outdoor_space],
                                    data: {
                                      search_decks_target: 'filter',
                                      action: 'change->search-decks#filter' }%>
           </div>

          <h4> Can live with cats </h4>
          <div class="filters">
            <%= select_tag :other_cats, options_for_select([ "yes", "no"]),
                                    include_blank: true,
                                    value: params[:other_cats],
                                    data: {
                                      search_decks_target: 'filter',
                                      action: 'change->search-decks#filter' }%>
           </div>
           <h4> Can live with dogs </h4>
           <div class="filters">
            <%= select_tag :other_dogs, options_for_select(["yes", "no"]),
                                    include_blank: true,
                                    value: params[:other_dogs],
                                    data: {
                                      search_decks_target: 'filter',
                                      action: 'change->search-decks#filter' }%>
           </div>

           <h4> Can live with kids </h4>
           <div class="filters">
            <%= select_tag :children, options_for_select(["yes", "no"]),
                                    include_blank: true,
                                    value: params[:children],
                                    data: {
                                      search_decks_target: 'filter',
                                      action: 'change->search-decks#filter' }%>
           </div>

      </div>
      <div>
        <%= submit_tag "Search", class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
