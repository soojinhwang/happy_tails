<%= form_tag pets_path, method: :get do %>
    <div class="search-component mb-4">
      <div class= "input-width">
        <%= text_field_tag :query,
          params[:query],
          class: "form-control",
          placeholder: "Find a pet"
        %>
         <%= text_field_tag :adoption_status,
          params[:adoption_status],
          collection: ["Available", "Adopted", "Reserved"],
          class: "form-control",
          placeholder: "Choose an adoption status"
        %>
      </div>
      <div>
        <%= submit_tag "Search", class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
