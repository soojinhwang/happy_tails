<div class="navbar navbar-expand-sm navbar-light navbar-happy-tails">
  <%= link_to root_path, class: "navbar-logo" do %>
    <%= image_tag "logo_gradient.png" %>
    <h3>HAPPY TAILS</h3>
  <% end %>

  <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <% if user_signed_in? && current_user.shelter.present? %>
      <div class="nav-links-right">
        <%= link_to "HOME", root_path, class: "nav-link"%>
        <%= link_to "SEE ALL PETS", pets_path, class: "nav-link" %>
        <%= link_to "LIST A PET", new_pet_path, class: "btn-yellow" %>
        <div class="nav-item dropdown">
          <%= cl_image_tag current_user.photo.key, height: 80, width: 80, crop: :thumb,
                                                  class: "avatar dropdown-toggle",

                                                  id: "navbarDropdown",
                                                  data: { bs_toggle: "dropdown" },
                                                  'aria-haspopup': true,
                                                  'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
            <!-- The paths for the below need to be worked out properly in the routes etc (currently all link to pets index) -->
            <%= link_to "Profile", profile_path, class: "dropdown-item" %>
            <%= link_to "My pets", my_pets_path, class: "dropdown-item" %>
            <div class="dropdown-divider"></div>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </div>
      </div>
    <% elsif user_signed_in? && current_user.shelter.blank? %>
      <div class="nav-links-right">
        <%= link_to "HOME", root_path, class: "nav-link"%>
        <%= link_to "SEE ALL PETS", pets_path, class: "nav-link" %>
        <%= link_to "DONATE", root_path, class: "btn-gray-border" %>
        <div class="nav-item dropdown">
          <%= cl_image_tag current_user.photo.key, height: 80, width: 80, crop: :thumb,
                                                  class: "avatar dropdown-toggle",
                                                  id: "navbarDropdown",
                                                  data: { bs_toggle: "dropdown" },
                                                  'aria-haspopup': true,
                                                  'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
            <!-- The paths for the below need to be worked out properly in the routes etc (currently all link to pets index) -->
            <%= link_to "Profile", profile_path, class: "dropdown-item" %>
            <%= link_to "My applications",  my_applications_path, class: "dropdown-item" %>
            <div class="dropdown-divider"></div>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </div>
      </div>
    <% else %>
      <div class="nav-links-right">
          <%= link_to "HOME", root_path, class: "nav-link"%>
          <%= link_to "SEE ALL PETS", pets_path, class: "nav-link" %>
          <%= link_to "DONATE", root_path, class: "btn-gray-border" %>
          <%= link_to "LOG IN", new_user_session_path, class: "btn-yellow" %>
        </div>
    <% end %>
  </div>
</div>
