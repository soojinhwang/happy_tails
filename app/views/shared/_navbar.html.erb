<div class="navbar navbar-expand-sm navbar-light navbar-happy-tails">
  <%= link_to root_path, class: "navbar-logo" do %>
    <%= image_tag "logo_gradient.png" %>
    <h3>HAPPY TAILS</h3>
  <% end %>

  <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav me-auto">
      <% if user_signed_in? && user.shelter.present? %>
      <li>
        <%= link_to root_path, class: "nav-link-text" do %>
        <h6>HOME</h6>
        <% end %>
      </li>
      <li>
        <%= link_to pets_path, class: "nav-link-text" do %>
        <h6>SEE ALL PETS</h6>
        <% end %>
      </li>
      <li>
        <%= link_to "#", class: "btn-gray-border" %>
          <h6>DONATE</h6>
        <% end %>
      </li>
      <li>
        <%= link_to new_pet_path, class: "btn-yellow" %>
          <h6>LIST A PET</h6>
        <% end %>
      </li>
      <li class="nav-item dropdown">
        <%= cl_image_tag @user.photo.key, class: "avatar dropdown-toggle",
                                          id: "navbarDropdown",
                                          data: { bs_toggle: "dropdown" },
                                          'aria-haspopup': true,
                                          'aria-expanded': false %>
        <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
          <%= link_to "Profile", user_path(@user), class: "dropdown-item" %>
          <%= link_to "Dashboard", dashboard_path, class: "dropdown-item" %>
          <%= link_to "My pets", pets_path, class: "dropdown-item" %>
          <%= link_to "Applications", applications_path class: "dropdown-item" %>
          <%#= link_to "Messages", messages_path? chatroom_path? class: "dropdown-item" %>
          <div class="dropdown-divider"></div>
          <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
        </div>
      </li>
      <% elsif user_signed_in? && user.shelter.blank? %>

      <% else %>
        <li>
          <%= link_to root_path, class: "nav-link-text" do %>
          <h6>HOME</h6>
          <% end %>
        </li>
        <li>
          <%= link_to pets_path, class: "nav-link-text" do %>
          <h6>SEE ALL PETS</h6>
          <% end %>
        </li>
        <li>
          <%= link_to "#", class: "btn-gray-border" %>
          <h6>DONATE</h6>
          <% end %>
        </li>
        <li>
          <%= link_to new_user_session_path, class: "btn-yellow" %>
          <h6>LOG IN</h6>
          <% end %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
