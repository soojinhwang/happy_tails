

<% if !@pet.photos.attached? %>
  <%= image_tag "https://images.unsplash.com/photo-1570824104453-508955ab713e?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=711&q=80",
      class:"d-block w-100" %>
<% elsif @pet.photos.size == 1 %>
  <img class="d-block w-100" src="<%= cl_image_path @pet.photos.first.key %>" alt="photo" >
<% elsif @pet.photos.size > 1 %>
  <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
      <% @pet.photos.size.times do |i| %>
        <li data-target="#carouselExampleIndicators" data-slide-to="<%= i %>" class="<%= "active" if i.zero? %>"></li>
      <% end %>
    </ol>
<% end %>
<div class="carousel-inner">
  <% @pet.photos.each_with_index do |photo, index| %>
    <div class="carousel-item <%= "active" if index.zero? %>">
      <img class="d-block w-100" src="<%= cl_image_tag photo.key %>" alt="<%= index.ordinalize %> image">
    </div>
  <% end %>
</div>
<a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>


