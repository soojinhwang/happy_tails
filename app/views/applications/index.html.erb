<div class="container">
  <h1>  Applications for <%= @pet.name %></h1>

  <h1> <%= @pet.name %>  </h1>

  <% if @pet.photos.attached? %>
    <% @pet.photos.each do |photo| %>
      <%= cl_image_tag photo.key, height: 300, width: 400, crop: :fill %>
    <% end %>
    <% else %>
      <img src="https://images.unsplash.com/photo-1623387641168-d9803ddd3f35?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1170&q=80" style="object-fit: contain;">
  <% end %>

  <p>Shelter: <%= @pet.shelter.name %></p>
  <p> Breed: <%= @pet.breed %></p>
  <p> Sex: <%= @pet.sex %></p>
  <p> Age: <%= @pet.age %></p>
  <p> Description: <%= @pet.description %></p>
  <p> Outdoor Space: <%= @pet.outdoor_space %></p>
  <p> Children Friendly <%= @pet.children_friendly %></p>
  <p> Pet Friendly: <%= @pet.pet_friendly %></p>
  <p> Hours Alone: Can for left alone for <%= @pet.hours_alone %> hours</p>
  <p> Medical Conditions: <%= @pet.medical_conditions %></p>

  <hr>

    <% @pet.applications.each do |application| %>


        <p> User ID: <%= application.user_id%> </p>
        <%= cl_image_tag application.user.photo.key, height: 100, width: 100, crop: :fill %>
        <p> First Name: <%= application.user.first_name%> </p>
        <p> Last Name: <%= application.user.last_name %></p>
        <p> Age: <%= application.user.age %></p>
        <p> Application Status: <%= application.approved ? "Approved" : "In Process" %></p>
        <%= link_to "View application", pet_application_path(application) %>

        <hr>

    <% end  %>




</div>
