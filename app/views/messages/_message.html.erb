<div id="message-<%= message.id %>" class="<%= message.user == current_user ? "sender-message" : "receiver-message" %>">
  <small>
    <h6><em><%= message.user.first_name %></em></h6>
  </small>
  <div class="messages-bottom">
    <p><%= message.content.capitalize %></p>
      <small>
        <i><%= message.created_at.strftime("%b %e at %l:%M %p") %></i>
      </small>
  </div>
</div>
